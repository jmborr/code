CC = g++
CFLAGS = -Wno-deprecated -c
CODE = /users/seldon/jmborr/Code
VPATH = $(CODE)/PDBClasses
LFLAG = -L $(CODE)/PDBClasses
lFLAG =  -lpdbClasses
INCLUDES = -I$(CODE)/PDBClasses
HDRS = pdbClasses2.h

#default target
all: message angleLYSII.x

#auxiliary targets
message:
	echo BUILDING angleLYSII.x

angleLYSII.x: pdbClasses angleLYSII.o
	$(CC) $(LFLAG) -o $@ angleLYSII.o $(lFLAG)

angleLYSII.o: angleLYSII.cpp

	$(CC) $(CFLAGS) $(INCLUDES) $<

pdbClasses: 
	cd $(CODE)/PDBClasses ; make all ;

clean:
	rm -f *.o core
	cd $(CODE)/PDBClasses ; make clean ;
