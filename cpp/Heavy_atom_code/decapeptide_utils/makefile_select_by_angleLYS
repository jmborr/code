CC = g++
CFLAGS = -Wno-deprecated -c
CODE = /users/seldon/jmborr/Code
VPATH = $(CODE)/PDBClasses
LFLAG = -L $(CODE)/PDBClasses
lFLAG =  -lpdbClasses
INCLUDES = -I$(CODE)/PDBClasses
HDRS = pdbClasses2.h

#default target
all: message select_by_angleLYS.x

#auxiliary targets
message:
	echo BUILDING select_by_angleLYS.x

select_by_angleLYS.x: pdbClasses select_by_angleLYS.o
	$(CC) $(LFLAG) -o $@ select_by_angleLYS.o $(lFLAG)

select_by_angleLYS.o: select_by_angleLYS.cpp

	$(CC) $(CFLAGS) $(INCLUDES) $<

pdbClasses: 
	cd $(CODE)/PDBClasses ; make all ;

clean:
	rm -f *.o core
	cd $(CODE)/PDBClasses ; make clean ;
